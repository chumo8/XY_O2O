<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- 注解驱动 替我们自动配最新注解映射器+适配器 -->
    <mvc:annotation-driven  conversion-service="conversion"/>

    <!-- 静态文件访问 -->
    <mvc:default-servlet-handler />
    <mvc:resources mapping="/static/**" location="/static/" />

    <!-- 加载配置文件 -->
    <context:property-placeholder location="classpath:*.properties"/>

    <!-- 扫描controller -->
    <context:component-scan base-package="com.xyo2o.web.controller" />
    <mvc:annotation-driven />
    <!-- 视图解析器 -->
    <bean
            class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp" />
    </bean>

    <!-- 配置自定义转换器  注意: 一定要将自定义的转换器配置到注解驱动上 -->
    <bean id="conversion" class="org.springframework.format.support.FormattingConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <!-- 指定自定义转换器的全路径名称 -->
                <bean class="com.xyo2o.common.converter.DateTimeConverter"/>
            </set>
        </property>
    </bean>
    <!-- SpringMVC上传文件时，需要配置MultipartResolver处理器 -->
    <bean id="multipartResolver"
          class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding" value="UTF-8" />
        <!-- 指定所上传文件的总大小,单位字节。注意maxUploadSize属性的限制不是针对单个文件，而是所有文件的容量之和 -->
        <property name="maxUploadSize" value="10240000" />
    </bean>
    <mvc:interceptors>
            <!-- 管理员权限拦截器 -->
            <mvc:interceptor>
                <mvc:mapping path="/**/*" />
                <bean class="com.xyo2o.web.interceptor.LoginInterceptor" />
            </mvc:interceptor>
    </mvc:interceptors>
</beans>